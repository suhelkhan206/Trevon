<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout_feature_cat_home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="0dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="false">
        <LinearLayout
            android:background="@drawable/product_border"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="0.6dp"
                android:src="@drawable/error_images"
                android:id="@+id/image"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                />

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="abc"
                        android:singleLine="true"
                        android:textSize="14sp"
                        android:textColor="@color/black_post_title"
                        android:layout_marginRight="10dp"/>

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:id="@+id/wish_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        card_view:srcCompat="@drawable/ic_heart_shape_outline"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Printed men T-Shirt"
                    android:textColor="#848484"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:textSize="12sp" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/shipping_status_layout"
                    android:padding="3dp"
                    android:background="@drawable/shipping_round_background"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        card_view:srcCompat="@drawable/ic_truck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/shipping_status_text"
                        android:text="Free Shipping"
                        android:textSize="8sp"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/black_post_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/ruppe_icon"
                            android:text="â‚¹"
                            android:textSize="12sp"
                            android:textColor="@color/carrot_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/sale_price"
                            android:textStyle="bold"
                            android:textColor="@color/app_btn_pink"
                            android:textSize="12sp"
                            android:text=" 350/-"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:id="@+id/original_price"
                            android:textStyle="bold"
                            android:textColor="@color/black_post_title"
                            android:textSize="10sp"
                            android:text="  450/-"
                            android:background="@drawable/strike_through"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/stock_count"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="#FF9900"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>